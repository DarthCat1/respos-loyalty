<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/confirmedClientTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Інформація по картках"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/cardTextView"
        style="@style/ConfirmedClientMainText"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Картка:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmedClientTitle"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/cardsSpinner"
        style="@style/ConfirmedClientMainText"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardTextView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cardCategoryText"
        style="@style/ConfirmedClientMainText"
        android:layout_marginTop="8dp"
        android:text="Категорія карти:"
        app:layout_constraintStart_toStartOf="@+id/cardTextView"
        app:layout_constraintTop_toBottomOf="@+id/cardsSpinner"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cardCategory"
        style="@style/ConfirmedClientMainText"
        app:layout_constraintStart_toStartOf="@+id/cardCategoryText"
        app:layout_constraintTop_toBottomOf="@+id/cardCategoryText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cardStatusText"
        style="@style/ConfirmedClientMainText"
        android:layout_marginTop="8dp"
        android:text="Статус картки:"
        app:layout_constraintStart_toStartOf="@+id/cardCategory"
        app:layout_constraintTop_toBottomOf="@+id/cardCategory"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cardStatus"
        style="@style/ConfirmedClientMainText"
        app:layout_constraintStart_toStartOf="@+id/cardStatusText"
        app:layout_constraintTop_toBottomOf="@+id/cardStatusText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cardActivateDateText"
        style="@style/ConfirmedClientMainText"
        android:layout_marginTop="8dp"
        android:text="Дата активації:"
        app:layout_constraintStart_toStartOf="@+id/cardStatus"
        app:layout_constraintTop_toBottomOf="@+id/cardStatus"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cardActivateDate"
        style="@style/ConfirmedClientMainText"
        app:layout_constraintStart_toStartOf="@+id/cardActivateDateText"
        app:layout_constraintTop_toBottomOf="@+id/cardActivateDateText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/clientBonusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Доступно бонусів:"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/cardActivateDateText"
        app:layout_constraintTop_toBottomOf="@+id/cardActivateDate"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/clientBonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientBonusText"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>